<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
   <useStyles filename="nifty-default-styles.xml" />
   <useControls filename="nifty-default-controls.xml" />
   <screen id="start" controller="com.whiuk.philip.game.client.StartScreen">
	    <layer id="layer" backgroundColor="#000f" childLayout="center">
	      <panel id="panel" height="35%" width="35%" align="center" valign="center" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
	        <interact onClick="quit()"/>
	        <panel id="panel-top-margin" height="5%" width="100%" align="center" valign="top" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
	        </panel>
	        <panel id="panel-centre" height="90%" width="100%" align="center" valign="center" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
	        	<text id="header" font="aurulent-sans-16.fnt" color="#ffff" text="Login!" align="center" valign="top" />
		        <panel id="form" height="90%" width="100%" backgroundColor="#555f" align="center" valign="bottom"  visibleToMouse="false" childLayout="center" >
		           	<panel id="form-username" height="100" width="100%" align="left" valign="top" backgroundColor="#ffff" childLayout="center" visibleToMouse="false">
		           		<control name="textfield" id="text_input_username" width="40%" align="center" valign="center" />
		        	</panel>
		        	<panel id="form-password" height="100" width="100%" align="left" valign="center" backgroundColor="#000f" childLayout="center" visibleToMouse="false">
			       		<control name="textfield" id="text_input_password" width="40%" align="center" />
		        	</panel>
		        	<panel id="form-bottom" height="*" width="100%" align="left" valign="bottom" backgroundColor="#888f" childLayout="center" visibleToMouse="false">
		        		<control name="button" label="Send" valign="center">
							<interact onClick="sendLoginRequest()" />
						</control>
		        	</panel>
	        	</panel>
			</panel>
	        <panel id="panel-bottom-margin" height="5%" width="100%" align="center" valign="bottom" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
	        </panel>
	      </panel>
	    </layer>
	</screen>
</nifty>
