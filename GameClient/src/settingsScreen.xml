<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
   <screen id="settings" controller="com.whiuk.philip.mmorpg.client.ui.SettingsScreen">
      <layer id="layer" backgroundColor="#000f" childLayout="vertical">
       	<panel id="panel-header" height="40" width="100%"
				align="left" valign="top" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
			<text id="header" font="aurulent-sans-16.fnt" color="#ffff" text="Settings" align="center" valign="center" />
		</panel>
		<panel id="panel-center" valign="top" align="center" width="100%" height="70%" childLayout="vertical" visibleToMouse="false">
			<control id="tabs" name="tabGroup" buttonWidth="50%" buttonHeight="50px" valign="top">
				<control id="tab_1" name="tab" caption="Graphics" height="240" childLayout="vertical" valign="top" align="center">
		           	<panel id="form-fullscreen" height="60" width="100%" align="left" valign="top" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
		           		<text id="fullscreen" font="aurulent-sans-16.fnt" color="#ffff" text="Fullscreen" align="left" valign="center" />
							<control id="fullscreen_drop_down" name="dropDown" valign="center" align="center" width="200" />
		        	</panel>
		        	<panel id="form-resolution" height="60" width="100%" align="left" valign="center" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
						<text id="resolution" font="aurulent-sans-16.fnt" color="#ffff" text="Resolution" align="left" valign="center" />
						<control id="resolution_drop_down" name="dropDown" valign="center" align="center" width="200" />
		        	</panel>
		        	<panel id="form-vsync" height="60" width="100%" align="left" valign="bottom" backgroundColor="#555f" childLayout="center" visibleToMouse="false">
						<text id="vsync" font="aurulent-sans-16.fnt" color="#ffff" text="VSync" align="left" valign="center" />
						<control id="vsync_drop_down" name="dropDown" valign="center" align="center" width="200" />
		        	</panel>
		        	<panel id="form-bottom" height="60" width="100%" align="left" valign="bottom" backgroundColor="#555f" childLayout="horizontal" visibleToMouse="false">
		        		<control name="button" id="apply_button" label="Apply" valign="center">
							<interact onClick="apply()" />
						</control>
		        		<control name="button" id="reset_button" label="Reset" valign="center">
							<interact onClick="reset()" />
						</control>
		        		<control name="button" id="cancel_button" label="Cancel" valign="center">
							<interact onClick="cancel()" />
						</control>
		        	</panel>
				</control>
				<control id="tab_2" name="tab" caption="Audio" childLayout="vertical" valign="top" align="center">
				</control>
				<control id="tab_3" name="tab" caption="Controls" childLayout="vertical" valign="top" align="center">
				</control>
			</control>
         </panel>
      </layer>
   </screen>
</nifty>
