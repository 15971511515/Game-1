<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
   <useStyles filename="nifty-default-styles.xml" />
   <useControls filename="nifty-default-controls.xml" />
   <!-- Control definition of chat area -->
   <screen id="lobby" controller="com.whiuk.philip.mmorpg.client.LobbyScreen">
      <layer id="layer" backgroundColor="#000f" childLayout="center">
       	<panel id="panel-header" height="40" width="100%"
				align="left" valign="top" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
			<text id="header" font="aurulent-sans-16.fnt" color="#ffff" text="Lobby" align="center" valign="center" />
		</panel>
		<panel id="panel-center" valign="center" align="center" width="100%" height="70%" childLayout="center" visibleToMouse="false">
			<control id="tabs" name="tabGroup" buttonWidth="50%" buttonHeight="50px">
				<control id="tab_1" name="tab" caption="Game">
			       	<panel id="character-selection" height="40" width="100%"
						align="left" valign="top" backgroundColor="#222f" childLayout="center" visibleToMouse="false">
						<control name="button" id="create_character_button" label="Create Character" align="left" valign="center" width="200">
							<interact onClick="createCharacter()" />
						</control>
						<control id="character_drop_down" name="dropDown" align="center" width="200" />
						<control name="button" id="play_button" label="Play" align="right" valign="center" width="100">
							<interact onClick="play()" />
						</control>
					</panel>
				</control>
				<control id="tab_2" name="tab" caption="Chat">
					<panel id="chat" style="nifty-panel" childLayout="center"
					       width="70%" height="60%" align="center" valign="center"
					       visibleToMouse="true">
					    <control id="chatId" name="nifty-chat" width="100%"
					       height="100%" lines="14" sendLabel="Send Message" />
					</panel>
				</control>
			</control>
         </panel>
      </layer>
   </screen>
</nifty>
